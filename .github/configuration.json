{
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": ["feature", "feat"]
    },
    {
      "title": "## ğŸ› Bug Fixes",
      "labels": ["fix", "bug", "fixbug"]
    },
    {
      "title": "## âš¡ Performance",
      "labels": ["perf"]
    },
    {
      "title": "## ğŸ§ª Tests",
      "labels": ["test", "tests"]
    },
    {
      "title": "## ğŸ“¦ Dependencies",
      "labels": ["dependencies", "deps"]
    },
    {
      "title": "## ğŸ“š Documentation",
      "labels": ["docs", "doc"]
    },
    {
      "title": "## ğŸ”¨ Refactoring",
      "labels": ["refactor", "style"]
    },
    {
      "title": "## âš™ï¸ CI/CD",
      "labels": ["ci", "build", "workflow"]
    },
    {
      "title": "## ğŸ§¹ Maintenance",
      "labels": ["chore"],
      "exclude_labels": ["deps", "dependencies"]
    },
    {
      "title": "## ğŸ’¬ Other",
      "labels": []
    }
  ],
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "template": "#{{CHANGELOG}}",
  "pr_template": "- #{{TITLE}}",
  "empty_template": "- no changes",
  "max_pull_requests": 1000,
  "max_back_track_time_days": 1000,
  "label_extractor": [
    {
      "pattern": ".*\\(deps\\): .*",
      "target": "dependencies",
      "on_property": "title"
    },
    {
      "pattern": "^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test){1}(\\([\\w\\-\\.]+\\))?(!)?: .*",
      "target": "$1",
      "on_property": "title"
    }
  ]
}
